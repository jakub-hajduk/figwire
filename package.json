{
  "name": "figwire",
  "version": "0.0.0",
  "description": "Bidirectional IPC communication between UI and core in Figma plugins. Lightweight and typed.",
  "type": "module",
  "scripts": {
    "dev": "pkgroll --watch",
    "build": "pkgroll",
    "test": "tsx ./scripts/test-runner.ts",
    "check": "biome check",
    "fix": "biome check --fix",
    "!release": "pnpm run fix && pnpm run build && changelogen --release --push --publish"
  },
  "keywords": [
    "figma",
    "plugin",
    "awaitable",
    "await",
    "ipc",
    "messaging",
    "ui"
  ],
  "author": {
    "name": "Jakub Hajduk",
    "email": "devhajduk@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakub-hajduk/figwire"
  },
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@figma/plugin-typings": "^1.107.0",
    "@types/node": "^22.13.4",
    "changelogen": "^0.5.7",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "pkgroll": "^2.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "exports": {
    "./plugin": {
      "import": {
        "default": "./dist/plugin.js",
        "types": "./dist/plugin.d.ts"
      },
      "require": {
        "default": "./dist/plugin.cjs",
        "types": "./dist/plugin.d.cts"
      }
    },
    "./ui": {
      "import": {
        "default": "./dist/ui.js",
        "types": "./dist/ui.d.ts"
      },
      "require": {
        "default": "./dist/ui.cjs",
        "types": "./dist/ui.d.cts"
      }
    }
  }
}
